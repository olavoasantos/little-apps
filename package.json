{
  "name": "little-apps",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "lint": "eslint **/*.{ts,tsx}",
    "prepare": "husky install .config/husky",
    "test:coverage": "turbo run test:coverage --parallel",
    "test": "turbo run test --parallel"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@micra/commit-lint-config": "next",
    "@micra/eslint-config": "next",
    "@types/node": "^18.7.15",
    "eslint": "^8.23.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^4.8.2"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.11.0",
  "volta": {
    "node": "16.17.0",
    "pnpm": "7.11.0"
  }
}
